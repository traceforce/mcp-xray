{
  "version": "2.1.0",
  "$schema": "https://raw.githubusercontent.com/oasis-tcs/sarif-spec/master/Schemata/sarif-schema-2.1.0.json",
  "runs": [
    {
      "tool": {
        "driver": {
          "name": "mcpxray",
          "version": "1.0.2",
          "informationUri": "https://github.com/traceforce/mcpxray",
          "rules": [
            {
              "id": "tls-version-1.2-detected",
              "shortDescription": {
                "text": "TLS version 1.3 or higher is recommended"
              }
            },
            {
              "id": "oauth-coarse-grained-scopes",
              "shortDescription": {
                "text": "OAuth PRM scopes are coarse-grained"
              }
            }
          ]
        }
      },
      "results": [
        {
          "ruleId": "oauth-coarse-grained-scopes",
          "level": "error",
          "message": {
            "text": "The MCP server's protected resource metadata (RPM) 'Asana' is using a single default scope. Please consult with the MCP server owner for the correct scopes to use."
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "examples/mcp_configs/remote_mcp_oauth.json"
                }
              }
            }
          ],
          "properties": {
            "mcpServerName": "Asana",
            "tool": "connection-scanner",
            "type": "CONNECTION"
          }
        },
        {
          "ruleId": "tls-version-1.2-detected",
          "level": "warning",
          "message": {
            "text": "The MCP server 'Asana' at https://mcp.asana.com/mcp accepts a TLS version below 1.3. While TLS 1.2 is still secure, TLS 1.3 provides improved security and performance. Consider upgrading to TLS 1.3."
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "examples/mcp_configs/remote_mcp_oauth.json"
                }
              }
            }
          ],
          "properties": {
            "mcpServerName": "Asana",
            "tool": "connection-scanner",
            "type": "CONNECTION"
          }
        }
      ]
    }
  ]
}