{
  "version": "2.1.0",
  "$schema": "https://raw.githubusercontent.com/oasis-tcs/sarif-spec/master/Schemata/sarif-schema-2.1.0.json",
  "runs": [
    {
      "tool": {
        "driver": {
          "name": "mcpxray",
          "version": "1.0.2",
          "informationUri": "https://github.com/traceforce/mcpxray",
          "rules": [
            {
              "id": "stdio-transport-detected",
              "shortDescription": {
                "text": "STDIO transport detected"
              }
            },
            {
              "id": "content_modification",
              "shortDescription": {
                "text": "risky_commands - content_modification"
              }
            },
            {
              "id": "command_injection",
              "shortDescription": {
                "text": "command_injection - command_injection"
              }
            }
          ]
        }
      },
      "results": [
        {
          "ruleId": "command_injection",
          "level": "error",
          "message": {
            "text": "Execution of tool/command based on user-controlled or arbitrary input. Original tool description: Run Playwright code snippet"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "examples/mcp_configs/local_mcp.json"
                }
              }
            }
          ],
          "properties": {
            "mcpServerName": "playwright",
            "mcpToolName": "browser_run_code",
            "tool": "token_analyzer",
            "type": "TOOL_ANALYSIS"
          }
        },
        {
          "ruleId": "stdio-transport-detected",
          "level": "warning",
          "message": {
            "text": "The MCP server “AWS Documentation” is configured to use a STDIO transport. MCP servers running locally with STDIO access may execute system commands, which can potentially cause damage to the local system. Ensure that such servers are trusted and run with appropriate safeguards and least-privilege permissions."
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "examples/mcp_configs/local_mcp.json"
                }
              }
            }
          ],
          "properties": {
            "mcpServerName": "AWS Documentation",
            "tool": "connection-scanner",
            "type": "CONNECTION"
          }
        },
        {
          "ruleId": "stdio-transport-detected",
          "level": "warning",
          "message": {
            "text": "The MCP server “playwright” is configured to use a STDIO transport. MCP servers running locally with STDIO access may execute system commands, which can potentially cause damage to the local system. Ensure that such servers are trusted and run with appropriate safeguards and least-privilege permissions."
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "examples/mcp_configs/local_mcp.json"
                }
              }
            }
          ],
          "properties": {
            "mcpServerName": "playwright",
            "tool": "connection-scanner",
            "type": "CONNECTION"
          }
        },
        {
          "ruleId": "content_modification",
          "level": "warning",
          "message": {
            "text": "Tool modifies content; risk of unintended changes or data loss. Original tool description: Upload one or multiple files"
          },
          "locations": [
            {
              "physicalLocation": {
                "artifactLocation": {
                  "uri": "examples/mcp_configs/local_mcp.json"
                }
              }
            }
          ],
          "properties": {
            "mcpServerName": "playwright",
            "mcpToolName": "browser_file_upload",
            "tool": "token_analyzer",
            "type": "TOOL_ANALYSIS"
          }
        }
      ]
    }
  ]
}